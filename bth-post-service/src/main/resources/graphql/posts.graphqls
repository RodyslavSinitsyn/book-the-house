type Post {
    id: ID
    title: String
    imageUrl: String
    details: PostDetails
    location: PostLocation
    status: BookingStatus
    userId: String
}

type PostLocation {
    country: String
    state: String
    city: String
    street: String
    houseNumber: String
}

type PostDetails {
    description: String
    availableFrom: String
    availableTo: String
    price: Int
}

enum BookingStatus {
    AVAILABLE
    BOOKED
}

input PostFilterInput {
    user: String
    country: String
    city: String
    priceMin: Int
    priceMax: Int
}

# The Root Query for the application
type Query {
    posts(page: Int, filter: PostFilterInput): [Post]!,
    post(id: String): Post!,
    nearestPosts(longitude: Float, latitude: Float): [Post]!,
}

# The Root Mutation for the application
type Mutation {
    createPost(imageUrl: String, userId: String) : Post!
}