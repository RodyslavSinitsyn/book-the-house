type Post {
    id: ID
    title: String
    imageUrl: String
    details: BookingDetails
    location: Location
    status: BookingStatus
}

type Location {
    country: String
    city: String
    street: String
    houseNumber: String
}

type BookingDetails {
    description: String
    availableFrom: String
    availableTo: String
    price: Int
}

enum BookingStatus {
    AVAILABLE
    BOOKED
}

input PostFilterInput {
    country: String
    city: String
    priceMin: Int
    priceMax: Int
}

# The Root Query for the application
type Query {
    posts(page: Int, filter: PostFilterInput): [Post]!,
    post(id: String): Post!,
}

